<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.laka.live.ui.widget.HeadView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headText="手机登录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:layout_marginTop="@dimen/space_20"
            android:text="+86"
            android:textColor="@color/color333333"
            android:textSize="@dimen/space_16" />

        <View
            android:layout_width="@dimen/divider_width"
            android:layout_height="@dimen/space_20"
            android:layout_gravity="center"
            android:background="@color/default_divider" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:hint="手机号码"
            android:inputType="numberSigned"
            android:paddingLeft="@dimen/space_30"
            android:textColor="@color/color333333"
            android:textColorHint="@color/colorAAAAAA"
            android:textSize="@dimen/space_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/default_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pvc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="验证码"
            android:inputType="numberSigned"
            android:paddingBottom="@dimen/space_15"
            android:paddingLeft="@dimen/space_30"
            android:paddingRight="@dimen/space_30"
            android:paddingTop="@dimen/space_15"
            android:textColor="@color/color333333"
            android:textColorHint="@color/color7B7B8B"
            android:textSize="@dimen/space_16" />

        <View
            android:layout_width="@dimen/divider_width"
            android:layout_height="@dimen/space_20"
            android:layout_gravity="center"
            android:background="@color/default_divider" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/space_30"
            android:paddingRight="@dimen/space_30">

            <com.laka.live.ui.widget.AlphaTextView
                android:id="@+id/get_pcv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:gravity="center"
                android:inputType="phone"
                android:paddingBottom="@dimen/space_15"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="@dimen/space_15"
                android:text="获取验证码"
                android:textColor="@color/color333333"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:text="60秒"
                android:textColor="@color/color333333"
                android:textSize="16dp"
                android:visibility="visible" />
        </FrameLayout>
    </LinearLayout>


    <com.laka.live.ui.widget.SelectorButton
        android:id="@+id/btn_login"
        app:radius="@dimen/space_10"
        app:color="@color/colorFCCD05"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="@color/color333333"
        android:textSize="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"/>

    <!-- <com.laka.live.ui.widget.AlphaTextView
        android:id="@+id/btn_login"
        style="@style/GrayBigButton"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:alpha="1"
        android:gravity="center"
        android:padding="@dimen/space_12"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/space_16" />-->
</LinearLayout>