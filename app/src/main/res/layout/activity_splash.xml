<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/splash_sdv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:actualImageScaleType="centerCrop"
        app:failureImage="@drawable/splash_login_bg"
        app:failureImageScaleType="centerCrop"
        app:placeholderImage="@drawable/splash_login_bg"
        app:placeholderImageScaleType="centerCrop"/>

    <com.laka.live.ui.widget.CountDownProgressBar
        android:id="@+id/count_down_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/space_15"
        android:layout_marginTop="@dimen/space_15"
        android:padding="@dimen/space_5"
        app:circler_radius="@dimen/space_15"
        app:circle_solid_color="@color/white50"
        app:circle_stroke_color="@color/transparent"
        app:circle_stroke_width="@dimen/space_2"
        app:progress_color="@color/colorFFD521"
        app:progress_width="@dimen/space_2"
        app:text_color="@color/white"
        app:text_size="@dimen/space_12"
        app:text_value="@string/splash_pass" />
</FrameLayout>
