<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_50"
    android:background="@color/white">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/space_15"
        android:gravity="center_vertical"
        android:text="@string/no_disturbing_in_night"
        android:textColor="@color/color333333"
        android:textSize="14dp" />

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/slide_switch"
        android:layout_width="51dp"
        android:layout_height="31dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_15"
        android:padding="0dp"
        app:kswAnimationDuration="300"
        app:kswBackDrawable="@drawable/ios_back_drawable"
        app:kswBackMeasureRatio="2.0"
        app:kswThumbDrawable="@drawable/ios_thumb"
        app:kswThumbMarginBottom="0dp"
        app:kswThumbMarginLeft="0dp"
        app:kswThumbMarginRight="0dp"
        app:kswThumbMarginTop="0dp" />

</RelativeLayout>