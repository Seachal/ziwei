<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_white">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/thumb_sdv"
        android:layout_width="@dimen/space_145"
        android:layout_height="@dimen/space_145"
        android:layout_alignParentTop="true"
        app:actualImageScaleType="centerCrop"
        app:failureImage="@drawable/blank_icon_bigimages"
        app:failureImageScaleType="centerCrop"
        app:placeholderImage="@drawable/blank_icon_bigimages"
        app:placeholderImageScaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/info_ll"
        android:layout_width="@dimen/space_145"
        android:layout_height="@dimen/space_145"
        android:layout_below="@id/thumb_sdv"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:lines="1"
            android:maxLength="10"
            android:textColor="@color/color333333"
            android:textSize="@dimen/space_15" />

        <TextView
            android:id="@+id/number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:text="@string/session_number"
            android:textColor="@color/color848484"
            android:textSize="@dimen/space_11" />

    </LinearLayout>

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="@dimen/space_40"
        android:layout_height="@dimen/space_40"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/home_icon_hot_topic" />

</RelativeLayout>