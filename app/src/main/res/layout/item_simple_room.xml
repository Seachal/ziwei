<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/screenshot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:placeholderImage="@drawable/blank_icon_bigimages"
        custom:placeholderImageScaleType="fitXY"/>

    <com.laka.live.ui.widget.LevelText
        android:id="@+id/level"
        android:layout_margin="5dp"
        style="@style/user_level"/>

    <TextView
        android:id="@+id/live_tag"
        android:layout_width="24dp"
        android:layout_height="13dp"
        android:layout_margin="5dp"
        android:layout_gravity="right"
        android:background="@drawable/list_live_tag_bg"
        android:gravity="center_horizontal"
        android:text="@string/live"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:shadowColor="@color/color7F000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"/>

</FrameLayout>