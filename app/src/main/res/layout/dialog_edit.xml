<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/px600"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/corners_15_solid_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:clickable="true"
            android:padding="@dimen/px15"
            android:visibility="invisible"
            android:src="@drawable/icon_close_grey" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px35"
            android:text="修改购买数量"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp40" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/px40"
            android:layout_marginRight="@dimen/px40"
            android:layout_marginTop="@dimen/px50"
            android:gravity="center">

            <ImageView
                android:id="@+id/reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mall_btn_minus_selector" />

            <EditText
                android:id="@+id/input"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:maxLength="5"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:inputType="number"
                android:background="@color/transparent"
                android:textColor="@color/colorFF950B"
                android:textSize="@dimen/space_15" />

            <ImageView
                android:id="@+id/increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mall_btn_plus_selector" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px40"
            android:layout_marginTop="@dimen/px80">

            <TextView
                android:id="@+id/dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/px96"
                android:layout_marginLeft="@dimen/px30"
                android:layout_marginRight="@dimen/px13"
                android:layout_weight="1"
                android:background="@drawable/corners_15_stroke_grey"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/colorD6D8DB"
                android:textSize="@dimen/sp30" />

            <TextView
                android:id="@+id/dialog_commit"
                android:layout_width="0dp"
                android:layout_height="@dimen/px96"
                android:layout_marginLeft="@dimen/px13"
                android:layout_marginRight="@dimen/px30"
                android:layout_weight="1"
                android:background="@drawable/corners_yellow_btn_selector"
                android:gravity="center"
                android:text="@string/save_changing"
                android:textColor="@color/white"
                android:textSize="@dimen/sp30" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>