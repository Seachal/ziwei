<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/px600"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/corners_15_solid_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_close"
            android:padding="@dimen/px15"
            android:clickable="true"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_close_grey"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px35"
            android:text="标题"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp40" />

        <TextView
            android:id="@+id/prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/px40"
            android:layout_marginRight="@dimen/px40"
            android:layout_marginTop="@dimen/px50"
            android:gravity="center"
            android:text="提示的内容"
            android:textColor="@color/color555555"
            android:textSize="@dimen/sp30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px40"
            android:layout_marginTop="@dimen/px80">

            <TextView
                android:id="@+id/dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/px96"
                android:layout_marginLeft="@dimen/px30"
                android:layout_marginRight="@dimen/px13"
                android:layout_weight="1"
                android:background="@drawable/corners_15_stroke_grey"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/colorD6D8DB"
                android:textSize="@dimen/sp30" />

            <TextView
                android:id="@+id/dialog_commit"
                android:layout_width="0dp"
                android:layout_height="@dimen/px96"
                android:layout_marginLeft="@dimen/px13"
                android:layout_marginRight="@dimen/px30"
                android:layout_weight="1"
                android:background="@drawable/corners_yellow_btn_selector"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/sp30" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>