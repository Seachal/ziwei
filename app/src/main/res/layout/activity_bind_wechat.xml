<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/ActivityBackground"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".account.income.BindWechatActivity">

    <com.laka.live.ui.widget.HeadView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headText="@string/first_wechat_withdrawal_bind" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/space_14"
                    android:layout_marginRight="@dimen/space_14"
                    android:background="@drawable/mine_icon_red"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/bind_wechat_first_step"
                    android:textColor="@color/color2E2E2E"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/divider_width"
                    android:layout_height="@dimen/space_40"
                    android:layout_marginLeft="@dimen/space_26"
                    android:layout_marginRight="@dimen/space_26"
                    android:background="@color/default_divider"/>

                <TextView
                    android:id="@+id/tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bind_wechat_first_step_tip"
                    android:textColor="@color/color777777"
                    android:textSize="14dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/step_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/space_14"
                    android:layout_marginRight="@dimen/space_14"
                    android:background="@drawable/mine_icon_yellow"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/text_tips_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/bind_wechat_second_step"
                    android:textColor="@color/color2E2E2E"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/step_two_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:orientation="horizontal"
                android:visibility="gone">

                <View
                    android:layout_width="@dimen/divider_width"
                    android:layout_height="@dimen/space_300"
                    android:layout_marginLeft="@dimen/space_26"
                    android:layout_marginRight="@dimen/space_26"
                    android:background="@color/default_divider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tips_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:text="@string/bind_wechat_second_step_tip"
                        android:textColor="@color/color777777"
                        android:textSize="14dp"/>

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/bind_wechat_tip"
                        android:visibility="visible"/>
                </LinearLayout>
            </LinearLayout>


            <Button
                android:id="@+id/sure"
                style="@style/GrayBigButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="@dimen/space_10"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="30dp"
                android:text="@string/bind"
                android:textSize="16dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>