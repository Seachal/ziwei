<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/my_info_item_height"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/rl_red"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/text"
            style="@style/my_item_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:text="text"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/count"
            android:text="+5"
            android:gravity="center"
            android:textSize="@dimen/sp16"
            android:paddingTop="@dimen/px5"
            android:paddingLeft="@dimen/px8"
            android:paddingRight="@dimen/px8"
            android:paddingBottom="@dimen/px5"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text"
            android:layout_marginLeft="@dimen/px15"
            android:background="@drawable/corners_solid_red" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginStart="@dimen/space_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/go2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorFF8001"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>


    <ViewStub
        android:id="@+id/level"
        style="@style/user_level"
        android:layout_gravity="center"
        android:layout="@layout/user_level_widgit" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_15"
        android:src="@drawable/mine_icon_next02" />

</LinearLayout>