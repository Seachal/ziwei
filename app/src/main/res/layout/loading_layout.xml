<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bg_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/space_10"
            android:text="@string/network_error_tips"
            android:textColor="@color/color848484" />

        <com.laka.live.ui.widget.SelectorButton
            android:id="@+id/btn_load_again"
            android:layout_width="@dimen/space_120"
            android:layout_height="@dimen/space_40"
            android:layout_below="@+id/bg_sign"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_20"
            android:textColor="@color/color333333"
            android:textSize="15sp"
            android:visibility="gone"
            app:bold="true"
            app:color="@color/colorFFC40E"
            app:press_color="@color/colorF5B900"
            app:radius="@dimen/space_6" />

        <ImageView
            android:id="@+id/bg_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bg_sign"
            android:layout_centerHorizontal="true" />

        <com.laka.live.ui.widget.LoadLoadingView
            android:id="@+id/pb_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</LinearLayout>
