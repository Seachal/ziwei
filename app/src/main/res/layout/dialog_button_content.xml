<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >


    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_12px_white"
        android:orientation="vertical" >

        <TextView
            android:text="这是内容"
            android:id="@+id/dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:minHeight="53dip"
            android:padding="15dip"
            android:textColor="@color/black"
            android:textSize="14dp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="@color/transparent30" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancle_but"
                android:layout_width="wrap_content"
                android:layout_height="41dip"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textColor="@color/black50"
                android:textSize="16dp"
                android:background="@drawable/dialog_button_selector"/>

            <ImageView
                android:layout_width="1px"
                android:layout_height="41dip"
                android:src="@color/transparent30" />

            <Button
                android:id="@+id/sure_but"
                android:background="@drawable/dialog_button_selector"
                android:layout_width="wrap_content"
                android:layout_height="41dip"
                android:layout_weight="1"
                android:text="@string/confim"
                android:textColor="@color/color007AFF"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>