<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_110"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/live"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/space_11"
            android:drawableTop="@drawable/post_course_live_btn_selector"
            android:gravity="center"
            android:padding="@dimen/px40"
            android:text="发布直播"
            android:textColor="@color/color777777"
            android:textSize="@dimen/sp30" />

        <TextView
            android:id="@+id/video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/space_11"
            android:drawableTop="@drawable/post_course_video_btn_selector"
            android:gravity="center"
            android:padding="@dimen/px40"
            android:text="发布视频"
            android:textColor="@color/color777777"
            android:textSize="@dimen/sp30" />

        <TextView
            android:id="@+id/news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/space_11"
            android:drawableTop="@drawable/post_course_news_btn_selector"
            android:gravity="center"
            android:padding="@dimen/px40"
            android:text="发布资讯"
            android:textColor="@color/color777777"
            android:textSize="@dimen/sp30" />

        <TextView
            android:id="@+id/testLive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/space_11"
            android:drawableTop="@drawable/post_course_test_btn_selector"
            android:gravity="center"
            android:padding="@dimen/px40"
            android:text="直播测试"
            android:textColor="@color/color777777"
            android:textSize="@dimen/sp30" />
    </LinearLayout>

</RelativeLayout>