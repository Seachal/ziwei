<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".account.setting.MsgRemindActivity">

    <com.laka.live.ui.widget.HeadView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headText="@string/msg_to_remind" />

    <View
        style="@style/horizontal_divider"
        android:layout_marginTop="10dp" />

    <include
        android:id="@+id/no_disturbing"
        layout="@layout/item_switch_button" />

    <View style="@style/horizontal_divider" />

    <TextView
        style="@style/setting_label"
        android:text="@string/help_tips" />

    <View style="@style/horizontal_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/follow_live_start_remind"
            layout="@layout/item_switch_button" />

        <View style="@style/horizontal_divider_margin_left_15dp" />

        <include
            android:id="@+id/sb_follow_me"
            layout="@layout/item_switch_button" />

        <View style="@style/horizontal_divider_margin_left_15dp" />

        <include
            android:id="@+id/msg_remind"
            layout="@layout/item_switch_button"
            android:visibility="gone" />
    </LinearLayout>

    <View style="@style/horizontal_divider" />
</LinearLayout>
