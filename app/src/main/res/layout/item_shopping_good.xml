<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/goods_image"
            android:layout_width="@dimen/space_147"
            android:layout_height="@dimen/space_147"
            android:layout_gravity="center_horizontal"
            app:actualImageScaleType="centerCrop"
            app:failureImage="@drawable/blank_icon_bigimages"
            app:failureImageScaleType="centerCrop"
            app:placeholderImage="@drawable/blank_icon_bigimages"
            app:placeholderImageScaleType="centerCrop" />

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"
            android:layout_marginTop="@dimen/space_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="@color/color333333"
            android:textSize="@dimen/space_15"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_15"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"
            android:layout_marginTop="@dimen/space_10">

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFF950B"
                android:textSize="@dimen/space_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/goods_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/color848484"
                android:textSize="@dimen/space_12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_5"
            android:background="@color/divider_F5F5F5" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/space_5"
        android:layout_height="match_parent"
        android:background="@color/divider_F5F5F5" />
</LinearLayout>
