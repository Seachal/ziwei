<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/px600"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/corners_15_solid_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px40">

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/px30"
            android:src="@drawable/index_icon_cancle_h" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px15"
            android:text="购买完整课堂更优惠"
            android:textColor="@color/black"
            android:textSize="@dimen/sp40" />


        <TextView
            android:id="@+id/prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px50"
            android:text=""
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp35" />

        <TextView
            android:id="@+id/secPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px15"
            android:text=""
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp35" />

        <Button
            android:id="@+id/singleCourse"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100"
            android:layout_marginLeft="@dimen/px70"
            android:layout_marginRight="@dimen/px80"
            android:layout_marginTop="@dimen/px70"
            android:background="@drawable/mine_btn_02_selector"
            android:text="只购买本节课"
            android:textColor="@drawable/text_black_selector"
            android:textSize="@dimen/sp30" />

        <Button
            android:id="@+id/entireCourse"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100"
            android:layout_marginLeft="@dimen/px70"
            android:layout_marginRight="@dimen/px70"
            android:layout_marginTop="@dimen/px30"
            android:background="@drawable/mine_btn_01_selector"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp30" />


    </LinearLayout>

</LinearLayout>