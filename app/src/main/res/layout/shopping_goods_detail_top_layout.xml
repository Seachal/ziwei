<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.laka.live.shopping.widget.ImageCycleView
            android:id="@+id/goods_detail_image_cycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/goods_detail_invalidate_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/mall_icon_invalid"
            android:visibility="gone" />
    </FrameLayout>

    <View style="@style/order_common_line" />

    <TextView
        android:id="@+id/shopping_goods_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_15"
        android:paddingRight="@dimen/space_15"
        android:paddingTop="@dimen/space_15"
        android:textColor="@color/color333333"
        android:textSize="@dimen/space_17"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_17"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginTop="@dimen/space_20">

        <TextView
            android:id="@+id/shopping_goods_detail_buyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/space_5"
            android:layout_marginRight="@dimen/space_15"
            android:text="@string/shopping_buyer_count"
            android:textColor="@color/color848484"
            android:textSize="@dimen/space_13" />

        <TextView
            android:id="@+id/money_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/space_5"
            android:text="ï¿¥"
            android:textColor="@color/colorFF950B"
            android:textSize="@dimen/space_19" />

        <TextView
            android:id="@+id/shopping_goods_detail_sale_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/money_tag"
            android:textColor="@color/colorFF950B"
            android:textSize="@dimen/space_30"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shopping_goods_detail_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/space_5"
            android:layout_marginLeft="@dimen/space_19"
            android:layout_toRightOf="@id/shopping_goods_detail_sale_price"
            android:textColor="@color/color848484"
            android:textSize="@dimen/space_13" />

    </RelativeLayout>

    <View style="@style/order_common_line" />

    <com.laka.live.ui.widget.FlowLayout
        android:id="@+id/goods_tag_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40" />

</LinearLayout>