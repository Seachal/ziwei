<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/goods_image"
        android:layout_width="@dimen/space_147"
        android:layout_height="@dimen/space_147"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/space_10"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="@dimen/space_147"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:gravity="left"
        android:maxLines="2"
        android:textColor="@color/search_goods_name"
        android:textSize="@dimen/space_14" />

    <LinearLayout
        android:layout_width="@dimen/space_147"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="@dimen/space_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/search_goods_price"
            android:textSize="@dimen/space_16" />

        <TextView
            android:id="@+id/goods_attribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/space_11" />
    </LinearLayout>
</LinearLayout>