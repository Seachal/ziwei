<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_110"
    android:background="@drawable/mine_img_transport"
    android:paddingLeft="@dimen/space_30">

    <ImageView
        android:id="@+id/sdv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
       android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="3dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="订单详情"/>

        <com.laka.live.shopping.widget.ShoppingCountdownView
            android:id="@+id/tv_state_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:textColor="@color/white"
            android:textSize="@dimen/space_13"
            android:text="状态"
            android:visibility="gone"/>
    </LinearLayout>

</FrameLayout>