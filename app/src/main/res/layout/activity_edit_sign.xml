<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/ActivityBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.laka.live.ui.widget.HeadView
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headText="@string/sign"
        app:tipText="@string/save"/>

    <View
        android:id="@+id/divider"
        style="@style/horizontal_divider"
        android:layout_below="@id/head_layout"
        android:layout_marginTop="@dimen/big_divider_height"/>

    <EditText
        android:id="@+id/input"
        style="@style/my_edit_text"
        android:layout_below="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="top"
        android:hint="@string/default_sign"
        android:textColorHint="@color/colorAAAAAA"
        android:lineSpacingExtra="2dp"
        android:minHeight="121dp"/>

    <TextView
        android:id="@+id/input_text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/input"
        android:layout_alignParentRight="true"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="30/30"
        android:textColor="@color/color777777"
        android:textSize="10dp"/>

    <View
        style="@style/horizontal_divider"
        android:layout_below="@id/input"/>
</RelativeLayout>