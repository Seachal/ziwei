<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/tail_name"
        layout="@layout/gift_name" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gift_car2_back"/>

        <ImageView
            android:id="@+id/light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="-5dp"
            android:src="@drawable/gift_car2_back_light"/>

        <ImageView
            android:id="@+id/reae_wheel"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_marginLeft="138.3dp"
            android:layout_marginTop="42dp"
            android:rotationY="75"
            android:rotationX="15"
            android:src="@drawable/gift_car2_wheel"/>

        <ImageView
            android:id="@+id/front_wheel"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="43.5dp"
            android:layout_marginLeft="201.1dp"
            android:rotationY="80"
            android:rotationX="15"
            android:src="@drawable/gift_car2_wheel"/>

    </FrameLayout>
</LinearLayout>
