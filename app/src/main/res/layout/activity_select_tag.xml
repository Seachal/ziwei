<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ActivityBackground">

    <com.laka.live.ui.widget.HeadView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tag_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95.6dp"
        android:textColor="@color/tag_change_selector"
        android:textSize="18dp"
        android:text="@string/select_u_tag"/>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:text="@string/sure_choice"
        android:background="@drawable/tag_cloud_item_selector"/>

    <TextView
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_above="@id/save"
        android:textColor="@color/tag_change_selector"
        android:text="@string/chnage"/>



    <com.laka.live.ui.widget.TagLayout
        android:id="@+id/tag_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tag_title"
        android:layout_above="@id/change"
        android:layout_marginTop="65dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp" />

</RelativeLayout>
