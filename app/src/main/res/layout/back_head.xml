<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    style="@style/back_head_layout">


    <com.laka.live.ui.widget.AlphaTextView
        android:id="@+id/back_icon"
        style="@style/title_back_view"
        android:text="@string/back" />


    <TextView
        android:id="@+id/tip"
        style="@style/back_text"
        android:layout_alignParentRight="true"
        android:textColor="@color/theme_red_color_selector"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/space_15"
        android:paddingLeft="@dimen/space_15"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title"
        style="@style/back_head_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true" />

    <View
        android:id="@+id/divider_line"
        style="@style/head_divider"
        android:layout_alignParentBottom="true" />
</RelativeLayout>