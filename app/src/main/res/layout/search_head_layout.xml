<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/back_head_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFAFAFA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height">

        <TextView
            android:id="@+id/back_icon"
            style="@style/title_back_view"
            android:text="" />

        <LinearLayout
            android:layout_width="@dimen/space_0"
            android:layout_height="@dimen/space_28"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/search_input_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_11"
                android:src="@drawable/seach_icon_search" />

            <EditText
                android:id="@+id/search_input"
                style="@style/DefaultEdit"
                android:layout_width="@dimen/space_0"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/search_hint"
                android:imeActionLabel="@string/search"
                android:imeOptions="actionSearch"
                android:paddingLeft="@dimen/space_6"
                android:paddingStart="@dimen/space_10"
                android:singleLine="true"
                android:textColor="@color/color333333"
                android:textColorHint="@color/color999999"
                android:textSize="@dimen/space_12" />

            <ImageView
                android:id="@+id/clear_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/space_5"
                android:src="@drawable/title_seach_delete_selector"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:text="@string/search"
            android:textColor="@color/color333333"
            android:textSize="16dp" />
    </LinearLayout>

    <View
        android:background="@color/colorC8C8C8"
        style="@style/horizontal_divider"/>
</LinearLayout>