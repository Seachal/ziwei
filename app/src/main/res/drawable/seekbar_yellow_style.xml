<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:height="2dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">
        <shape android:shape="rectangle">

            <corners android:radius="3px" />

            <gradient
                android:angle="270"
                android:centerColor="@color/colorE5E5E5"
                android:centerY="0.15"
                android:endColor="@color/colorE5E5E5"
                android:startColor="@color/colorE5E5E5" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress"
        android:height="2dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">
        <clip>

            <shape android:shape="rectangle">
                <corners android:radius="3px" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/colorF65843"
                    android:centerY="0.15"
                    android:endColor="@color/colorF65843"
                    android:startColor="@color/colorF65843" />
                <!--        <stroke android:width="10dp" android:color="@color/btn_bg_pink"
                         android:dashWidth="1dp" android:dashGap="1dp" />     -->

            </shape>
        </clip>
    </item>

</layer-list>
