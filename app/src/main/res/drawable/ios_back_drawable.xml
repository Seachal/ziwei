<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/colorFFC40E"/>
            <corners android:radius="45px"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/colorF7F7F7"/>
            <corners android:radius="45px"/>
            <stroke
                android:width="2px"
                android:color="@color/colorE5E5E5"/>
        </shape>
    </item>
</selector>