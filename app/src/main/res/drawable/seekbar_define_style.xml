<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:height="2dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">
        <shape android:shape="rectangle">

            <corners android:radius="3px" />

            <gradient
                android:angle="270"
                android:centerColor="@color/transparent80"
                android:centerY="0.15"
                android:endColor="@color/transparent80"
                android:startColor="@color/transparent80" />
            <!--   <stroke android:width="10dp" android:color="#888888"
                  android:dashWidth="1dp" android:dashGap="1dp" />

                       -->
        </shape>
    </item>
    <item
        android:id="@android:id/progress"
        android:height="2dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">
        <clip>

            <shape android:shape="rectangle">
                <corners android:radius="3px" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/color80ffc40e"
                    android:centerY="0.15"
                    android:endColor="@color/color80ffc40e"
                    android:startColor="@color/color80ffc40e" />
                <!--        <stroke android:width="10dp" android:color="@color/btn_bg_pink"
                         android:dashWidth="1dp" android:dashGap="1dp" />     -->

            </shape>
        </clip>
    </item>


    <item
        android:id="@android:id/secondaryProgress"
        android:height="2dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">
        <clip>

            <shape android:shape="rectangle">
                <corners android:radius="3px" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/transparent20"
                    android:centerY="0.15"
                    android:endColor="@color/transparent20"
                    android:startColor="@color/transparent20" />
            </shape>
        </clip>
    </item>
</layer-list>
